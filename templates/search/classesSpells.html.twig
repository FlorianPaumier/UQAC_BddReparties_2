<div id="classesSpells"
     class="flex flex-col w-full xl:flex-row justify-center">
	<!-- Cards Start -->
	<div class="flex flex-col justify-start">
		<div class="container mx-auto px-6 py-10">
			<div class="xl:flex lg:flex md:flex xl:w-full md:justify-center w-11/12 mx-auto lg:justify-center xl:justify-between flex-wrap justify-between lg:items-center xl:flex-row xl:justify-between">
				{% for row in rows.items %}
					<div class="">
						<div class="bg-white dark:bg-gray-800 shadow xl:flex lg:flex md:flex p-5 rounded">
							<div class="">
								<h2 tabindex="0"
								    class="focus:outline-none text-gray-800 dark:text-gray-100 cursor-pointer text-3xl  mb-3 font-normal">
									{{ row.type.name }}
								</h2>
								<p tabindex="0"
								   class="grid grid-cols-8 focus:outline-none text-sm text-gray-600 dark:text-gray-400 font-normal">
									{% for spell in row.spells %}
										<a class="text-blue-500 underline background-transparent font-bold text-xs outline-none focus:outline-none ease-linear transition-all duration-150  cursor-pointer"
										   href="{{ path('spell_show', {'id' : spell.id}) }}">
											{{ spell.name }}
										</a>
									{% endfor %}
								</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
		{{ include('components/pagination.html.twig', {"pagination" : rows}) }}
	</div>
</div>
